firesignal(game.ReplicatedStorage.Bricks.Caption.OnClientEvent, "Plamen hardcore mode loading is start...")
wait(5)
firesignal(game.ReplicatedStorage.Bricks.Caption.OnClientEvent, "Plamen hardcore mode loaded!")

-- grey eyes
coroutine.wrap(function()
while true do
wait(math.random(80,230))
game.ReplicatedStorage.GameData.LatestRoom.Changed:Wait()
loadstring(game:HttpGet("https://pastebin.com/raw/eMDhFFur"))()
    end
end)()
